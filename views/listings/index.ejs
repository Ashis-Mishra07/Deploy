<% layout("layout/boilerplate") %>


    <body>


        <!-- <h1>All Listings</h1> -->
        <div id="filters" class="mt-3 filters">
            <div class="filter">
                <i class="fa-solid fa-fire"></i>
                <p>Trending</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-bed"></i>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-mountain-city"></i>
                <p>Iconic city</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-tractor"></i>
                <p>Farms</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-snowflake"></i>
                <p>Chill</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-house-tsunami"></i>
                <p>Surfing</p>
            </div>
            <div class="filter">
                <i class="fa-brands fa-fort-awesome"></i>
                <p>Castles</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-campground"></i>
                <p>Camping</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-mountain"></i>
                <p>Mountain</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-person-swimming"></i>
                <p>Amazing pools</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-kitchen-set"></i>
                <p>Chef's kitchen</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-gamepad"></i>
                <p>Play</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-wind"></i>
                <p>Wind Mills</p>
            </div>
            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display taxes</label>
                </div>
            </div>
        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <% for(list of allListings){ %>
                <div class="card col listing-card">
                    <a href="/listings/<%= list.id %>">
                        <img src=<%=list.image.url %> class="card-img-top" alt="listing_image" style="height:20rem">

                        <div class="card-body">
                            <p class="card-text">
                                <a href="/listings/<%= list.id %>">
                                    <%= list.title %>
                                </a>
                                <br>
                                <%= Intl.NumberFormat('en-IN', { style: 'currency' , currency: 'INR'
                                    }).format(list.price)%>/night
                                    <i class="tax-info"> &nbsp; + &nbsp; 18%GST</i>
                            </p>
                        </div>
                    </a>

                </div>
                <% } %>
        </div>
        <div class="exploring mt-6">
            <h5>Continue  exploring  homes</h5>
            <button class="btn btn-secondary mb-6">Show More</button>
        </div>

        <script>
            let taxtoggle = document.getElementById("flexSwitchCheckDefault");
            taxtoggle.addEventListener("click", () => {
                let INFO = document.getElementsByClassName("tax-info");
                for (inf of INFO) {
                    if(inf.style.display != "inline"){
                        inf.style.display = "inline";
                    }
                    else{
                        inf.style.display = "none";
                    }
                }
            })
        </script>
    </body>